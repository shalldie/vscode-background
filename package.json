{
  "name": "background",
  "displayName": "background",
  "description": "A simple tool to make your vscode's background look better!",
  "version": "1.2.0",
  "packageManager": "pnpm@7.5.1",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "vscode:uninstall": "node ./out/uninstall",
    "build": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint . --ext .ts src",
    "fix": "eslint . --fix --ext .ts src",
    "package": "vsce package",
    "prepare": "husky install"
  },
  "publisher": "shalldie",
  "author": "shalldie",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shalldie/vscode-background.git"
  },
  "engines": {
    "vscode": "^1.40.0"
  },
  "icon": "vscode-background-logo.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionKind": [
    "ui"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.background.info",
        "title": "Background - Info"
      },
      {
        "command": "extension.background.uninstall",
        "title": "Background - Uninstall (remove extension)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Plugin background config. background 插件配置",
      "properties": {
        "background.enabled": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Plugin background enabled.\nbackground 插件是否启用"
        },
        "background.useFront": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "If use front image,which means image is placed on the top of your code.\n是否使用前景图，这样会使图片放在代码的顶部"
        },
        "background.style": {
          "type": "object",
          "default": {
            "content": "''",
            "pointer-events": "none",
            "position": "absolute",
            "z-index": "99999",
            "width": "100%",
            "height": "100%",
            "background-position": "100% 100%",
            "background-repeat": "no-repeat",
            "opacity": 1
          },
          "markdownDescription": "Custom common style.\n自定义各项公有样式."
        },
        "background.styles": {
          "type": "array",
          "default": [
            {},
            {},
            {}
          ],
          "markdownDescription": "Each style of backgrounds.\n每一个背景图的独有样式。"
        },
        "background.useDefault": {
          "type": "boolean",
          "default": true,
          "description": "Use default images.使用默认图片"
        },
        "background.customImages": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "markdownDescription": "Your custom images. 自己定制背景图\nExample:\n`https://a.com/b.png`\nor\n`file:///a/b.jpg`"
        },
        "background.loop": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Loop your images.\n循环使用图片"
        }
      }
    }
  },
  "devDependencies": {
    "@types/node": "^16.11.45",
    "@types/vscode": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "vsce": "^2.9.1"
  },
  "dependencies": {
    "sudo-prompt": "^9.2.1"
  }
}
