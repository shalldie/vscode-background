{
    "name": "background",
    "displayName": "background",
    "description": "A simple tool to make your vscode's background look better!",
    "version": "1.1.2",
    "publisher": "shalldie",
    "engines": {
        "vscode": "^1.0.0"
    },
    "icon": "gif/logo.png",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.background.reset",
                "title": "Background - Set as default. (设置为默认)"
            },
            {
                "command": "extension.background.setImgs",
                "title": "Background - Personalization! (个性化,自选图片)"
            },
            {
                "command": "extension.background.uninstall",
                "title": "Background - Remove the background. (删除背景)"
            },
            {
                "command": "extension.background.changeRandChoice",
                "title": "Background - Open or close the randChoice function. (开关图片随机位置功能)"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "vscode": "^0.11.0"
    }
}