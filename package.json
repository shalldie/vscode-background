{
  "name": "background",
  "displayName": "background",
  "description": "Bring background images to your vscode",
  "version": "2.0.3",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "vscode:uninstall": "node ./out/uninstall",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "package": "vsce package",
    "prepare": "husky"
  },
  "publisher": "shalldie",
  "author": "shalldie",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shalldie/vscode-background.git"
  },
  "engines": {
    "vscode": "^1.94.0"
  },
  "icon": "images/logo.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "main": "./out/extension",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "extension.background.info",
        "category": "Background",
        "title": "%extension.background.command.info.title%"
      },
      {
        "command": "extension.background.install",
        "category": "Background",
        "title": "%extension.background.command.install.title%"
      },
      {
        "command": "extension.background.disable",
        "category": "Background",
        "title": "%extension.background.command.disable.title%"
      },
      {
        "command": "extension.background.uninstall",
        "category": "Background",
        "title": "%extension.background.command.uninstall.title%"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "background",
      "properties": {
        "background.enabled": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "%extension.background.enabled.description%"
        },
        "background.useFront": {
          "type": "boolean",
          "default": true,
          "markdownDeprecationMessage": "%extension.background.common.deprecation%"
        },
        "background.style": {
          "type": "object",
          "default": {
            "background-position": "100% 100%",
            "background-size": "auto",
            "opacity": 0.6
          },
          "markdownDeprecationMessage": "%extension.background.common.deprecation%"
        },
        "background.styles": {
          "type": "array",
          "default": [
            {},
            {},
            {}
          ],
          "markdownDeprecationMessage": "%extension.background.common.deprecation%"
        },
        "background.customImages": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string",
            "pattern": "^(https://|file://)",
            "patternErrorMessage": "%extension.background.urlProtocol.error%"
          },
          "markdownDeprecationMessage": "%extension.background.common.deprecation%"
        },
        "background.interval": {
          "type": "number",
          "default": 0,
          "markdownDeprecationMessage": "%extension.background.common.deprecation%"
        },
        "background.editor": {
          "type": "object",
          "default": {
            "useFront": true,
            "style": {
              "background-position": "100% 100%",
              "background-size": "auto",
              "opacity": 0.6
            },
            "styles": [
              {},
              {},
              {}
            ],
            "images": [],
            "interval": 0,
            "random": false
          },
          "properties": {
            "useFront": {
              "type": "boolean",
              "default": true,
              "markdownDescription": "%extension.background.editor.useFront%"
            },
            "style": {
              "type": "object",
              "default": {
                "background-position": "100% 100%",
                "background-size": "auto",
                "opacity": 0.6
              },
              "markdownDescription": "%extension.background.editor.style%"
            },
            "styles": {
              "type": "array",
              "default": [
                {},
                {},
                {}
              ],
              "markdownDescription": "%extension.background.editor.styles%"
            },
            "images": {
              "type": "array",
              "default": [],
              "items": {
                "type": "string",
                "pattern": "^(https://|file://)",
                "patternErrorMessage": "%extension.background.urlProtocol.error%"
              },
              "markdownDescription": "%extension.background.editor.images%"
            },
            "interval": {
              "type": "number",
              "default": 0,
              "markdownDescription": "%extension.background.editor.interval%"
            },
            "random": {
              "type": "boolean",
              "default": false,
              "markdownDescription": "%extension.background.editor.random%"
            }
          },
          "markdownDescription": "%extension.background.editor.description%"
        },
        "background.fullscreen": {
          "type": "object",
          "default": {
            "images": [],
            "opacity": 0.1,
            "brightness": 1,
            "size": "cover",
            "position": "center",
            "interval": 0,
            "random": false
          },
          "properties": {
            "images": {
              "type": "array",
              "default": [],
              "items": {
                "type": "string",
                "pattern": "^(https://|file://)",
                "patternErrorMessage": "%extension.background.urlProtocol.error%"
              },
              "markdownDescription": "%extension.background.fullscreen.images%"
            },
            "opacity": {
              "type": "number",
              "default": 0.1,
              "minimum": 0,
              "maximum": 0.6,
              "markdownDescription": "%extension.background.fullscreen.opacity%"
            },
            "brightness": {
              "type": "number",
              "default": 1,
              "minimum": 0.1,
              "maximum": 2,
              "markdownDescription": "%extension.background.fullscreen.brightness%"
            },
            "size": {
              "type": "string",
              "default": "cover",
              "markdownDescription": "%extension.background.fullscreen.size%"
            },
            "position": {
              "type": "string",
              "default": "center",
              "markdownDescription": "%extension.background.fullscreen.position%"
            },
            "interval": {
              "type": "number",
              "default": 0,
              "markdownDescription": "%extension.background.fullscreen.interval%"
            },
            "random": {
              "type": "boolean",
              "default": false,
              "markdownDescription": "%extension.background.fullscreen.random%"
            }
          },
          "markdownDescription": "%extension.background.fullscreen.description%"
        },
        "background.sidebar": {
          "type": "object",
          "default": {
            "images": [],
            "opacity": 0.1,
            "brightness": 1,
            "size": "cover",
            "position": "center",
            "interval": 0,
            "random": false
          },
          "properties": {
            "images": {
              "$ref": "#/properties/background.fullscreen/properties/images"
            },
            "opacity": {
              "$ref": "#/properties/background.fullscreen/properties/opacity"
            },
            "brightness": {
              "$ref": "#/properties/background.fullscreen/properties/brightness"
            },
            "size": {
              "$ref": "#/properties/background.fullscreen/properties/size"
            },
            "position": {
              "$ref": "#/properties/background.fullscreen/properties/position"
            },
            "interval": {
              "$ref": "#/properties/background.fullscreen/properties/interval"
            },
            "random": {
              "$ref": "#/properties/background.fullscreen/properties/random"
            }
          },
          "markdownDescription": "%extension.background.sidebar.description%"
        },
        "background.panel": {
          "type": "object",
          "default": {
            "images": [],
            "opacity": 0.1,
            "brightness": 1,
            "size": "cover",
            "position": "center",
            "interval": 0,
            "random": false
          },
          "properties": {
            "images": {
              "$ref": "#/properties/background.fullscreen/properties/images"
            },
            "opacity": {
              "$ref": "#/properties/background.fullscreen/properties/opacity"
            },
            "brightness": {
              "$ref": "#/properties/background.fullscreen/properties/brightness"
            },
            "size": {
              "$ref": "#/properties/background.fullscreen/properties/size"
            },
            "position": {
              "$ref": "#/properties/background.fullscreen/properties/position"
            },
            "interval": {
              "$ref": "#/properties/background.fullscreen/properties/interval"
            },
            "random": {
              "$ref": "#/properties/background.fullscreen/properties/random"
            }
          },
          "markdownDescription": "%extension.background.panel.description%"
        }
      }
    }
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@types/lockfile": "^1.0.4",
    "@types/node": "20.x",
    "@types/stylis": "^4.2.6",
    "@types/uglify-js": "^3.17.5",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/vsce": "^3.2.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@vscode/sudo-prompt": "^9.3.1",
    "lockfile": "^1.0.4",
    "stylis": "^4.3.4",
    "uglify-js": "^3.19.3"
  }
}
