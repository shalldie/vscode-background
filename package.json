{
    "name": "background",
    "displayName": "background",
    "description": "A simple tool to make your vscode's background look better!",
    "version": "1.1.7",
    "publisher": "shalldie",
    "engines": {
        "vscode": "^1.0.0"
    },
    "icon": "gif/logo.png",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [{
            "command": "extension.background.info",
            "title": "Background - Info"
        }],
        "configuration": {
            "type": "object",
            "title": "Plugin background config. background 插件配置",
            "properties": {
                "background.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Plugin background enabled.background 插件是否启用"
                },
                "background.useDefault": {
                    "type": "boolean",
                    "default": true,
                    "description": "Use default images.使用默认图片"
                },
                "background.opacityImages": {
                    "type": "integer",
                    "default": 90,
                    "description": "Custom opacity(0 - 100)"
                },
                "background.size": {
                    "type": "array",
                    "default": ["contain", "contain", "contain"],
                    "description": "background-size property( CSS ) "
                },
                "background.customImages": {
                    "type": "array",
                    "default": 0.9,
                    "description": "Your custom Images(Max length is 3). 自己定制背景图，最多3个"
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "vscode": "^0.11.0"
    },
    "__metadata": {
        "id": "dee8df91-b82e-4d4c-a99a-872360b1d015",
        "publisherId": "4b608099-52f9-4b35-bf6f-0ec7e2527248",
        "publisherDisplayName": "shalldie"
    }
}